<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/crdCategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="8dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"> <!-- si se va a poner el texto encima de la imagen,
            entonces quitar esta propiedad de orientation -->

            <ImageView
                android:id="@+id/imgCategoria"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                android:src="@drawable/food_img2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtNombreCategoria"
                android:gravity="center"
                android:text="Relojes para él"
                android:textColor="#5C5858"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:fontFamily="@font/san_francisco"
                android:padding="5dp"
                android:maxLines="1"
                />
            <!--<TextView
                android:visibility="invisible"
                android:id="@+id/txtNombreCategoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imgCategoria"
                android:layout_alignRight="@+id/imgCategoria"
                android:layout_alignBottom="@+id/imgCategoria"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="Relojes para él"
                android:textColor="#5C5858"
                android:textSize="18sp" />-->
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>